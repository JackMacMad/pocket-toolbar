{
    "manifest_version": 2,
    "name": "pocket-toolbar",
    "version": "1.0.1",
    "description": "adds pocket to the toolbar",
    "icons": {
        "48": "icons/pocket-48.png"
    },
    "browser_action": {
        "browser_style": true,
        "default_icon": {
            "16": "icons/pocket-16.png",
            "32": "icons/pocket-32.png"
        },
        "default_title": "pocket"
    },
    "background": {
        "scripts": ["background.js"]
    }
}
